<div class="row">
    <div class="col s12">
        <div class="page-title">@ViewBag.Titre</div>
    </div>
    <div class="col s12 m12 l12">
        @using (Html.BeginForm("SendFormCat", "CentreCout", new { Mode = ViewBag.Mode, Code = ViewBag.Code }, FormMethod.Post, new { role = "form" }))
        {
            <div class="row">
                <div class="input-field">
                    <input id="CODE_CAT" type="text" class="validate" value="@Model.CODE" name="CODE_CAT">
                    <label for="CODE_CAT" class="">CODE</label>
                </div>
            </div>
            <div class="row">
                <div class="input-field">
                    <input id="LIBELLE" type="text" class="validate" value="@Model.LIBELLE" name="LIBELLE">
                    <label for="LIBELLE" class="">LIBELLE</label>
                </div>
            </div>
            <div class="right-align">
                <button class="waves-effect waves-light btn green m-b-xs" type="submit">Valider</button>
            </div>
        }
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $("#li_Centre").attr("class", "active");
    });
</script>
